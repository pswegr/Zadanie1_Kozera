@model IEnumerable<Zadanie1_Kozera.Models.SchoolViewModels.JobHierarchyViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Boss
            </th>
            <th>
                Subordinate
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BossName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subordinate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.JobHierarchy.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.JobHierarchy.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.JobHierarchy.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
